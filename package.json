{
	"name": "editor-manager",
	"displayName": "Editor Manager",
	"description": "Save groups of editors",
	"publisher": "ArturoDent",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/ArturoDent/editor-manager"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [],
	"activationEvents": [
		"*",
		"onView:editor-groups"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "editorManager",
					"title": "Editor Manager",
					"icon": "$(eye)"
				}
			]
		},
		"views": {
			"editorManager": [
				{
					"id": "editor-groups",
					"name": "Groups"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "editor-groups.refreshTree",
					"when": "view == editor-groups",
					"group": "navigation"
				},
				{
					"command": "editor-groups.addGroup",
					"when": "view == editor-groups",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "editor-groups.renameTab",
					"when": "view == editor-groups"
				},
				{
					"command": "editor-groups.closeTab",
					"when": "view == editor-groups"
				}
			]
		},
		"commands": [
			{
				"command": "editor-groups.refreshTree",
				"title": "Refresh Editor Groups",
				"icon": "$(refresh)"
			},
			{
				"command": "editor-groups.addGroup",
				"title": "Add a group here",
				"icon": "$(zap)"
			},
			{
				"command": "editor-groups.renameTab",
				"title": "Rename this file",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "editor-groups.closeTab",
				"title": "Close this file",
				"icon": {
					"light": "resources/light/close.svg",
					"dark": "resources/dark/close.svg"
				},
				"enablement": "view == editor-groups"
			}
		]
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^15.9.0",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^4.6.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"ts-debounce": "^4.0.0"
	}
}
